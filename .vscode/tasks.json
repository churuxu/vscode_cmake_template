{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [         
        {
             "label": "make-dir",             
             "type": "shell",
             "command":"mkdir -f build",
             "windows": {
                "command":"cmd /c if not exist build md build", 
             }, 
             "problemMatcher":[]
        },       
        {            
            "label": "cmake-generate",
            "type": "shell",
            "options": {"cwd": "./build"},
            "command": "cmake -G Ninja .. -DCMAKE_BUILD_TYPE=Debug" ,
            "problemMatcher":[],
            "dependsOn":[
                "make-dir"
            ],           
        }
        {
            "label": "build",
            "type": "shell",
            "options": {"cwd": "./build"},
            "command": "ninja",
            "dependsOn":[
                "cmake-generate"
            ],
            
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}/build"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):.*\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },        
            "group": {                
                "kind": "build",
                "isDefault": true
            }
        },        
        {
            "label": "clean",
            "type":"shell", 
            "command":"rm -rf build", 
            "windows": {
                "command":"cmd /c rd /s /q build", 
            },           
            "problemMatcher":[]
       }
       ,
        {
            "label": "c_cpp_properties-generate",
            "type":"shell", 
            "options": {"cwd": ".vscode"},
            "command":"node generate_c_cpp_properties.js",                       
            "problemMatcher":[]
       },
        {
            "label": "test",
            "type":"shell", 
            "options": {"cwd": "./build"},
            "command":"${workspaceRootFolderName}-test", 
			"windows": {
                "command":"cmd /c ${workspaceRootFolderName}-test", 
            },
            "dependsOn":[
                "build-test"
            ],
            "problemMatcher":[]
       }
    ]
}